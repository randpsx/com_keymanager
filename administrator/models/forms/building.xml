<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_KEYMANAGER_FORM_LBL_BUILDING_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="building_name" type="text" size="40" class="inputbox"
                                                    
            label="COM_KEYMANAGER_FORM_LBL_BUILDING_BUILDING_NAME"
            description="COM_KEYMANAGER_FORM_DESC_BUILDING_BUILDING_NAME" 
                                                    
                                                    
                                                     required="true" 
                                                    filter="safehtml" /> 

       <field name="building_description" type="text" size="40" class="inputbox"
                                                    
            label="COM_KEYMANAGER_FORM_LBL_BUILDING_BUILDING_DESCRIPTION"
            description="COM_KEYMANAGER_FORM_DESC_BUILDING_BUILDING_DESCRIPTION" 
                                                    
                                                    
                                                    
                                                    filter="safehtml" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_KEYMANAGER_FORM_LBL_BUILDING_CREATED_BY"
            description="COM_KEYMANAGER_FORM_DESC_BUILDING_CREATED_BY"  /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
